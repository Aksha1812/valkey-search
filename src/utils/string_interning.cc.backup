#include "src/utils/string_interning.h"

#include <cstring>
#include <memory>

#include "absl/strings/string_view.h"
#include "absl/synchronization/mutex.h"
#include "src/utils/allocator.h"
#include "vmsdk/src/log.h"
#include "vmsdk/src/memory_allocation_overrides.h"
#include "vmsdk/src/memory_tracker.h"

namespace valkey_search {

MemoryPool StringInternStore::memory_pool_{0};

InternedString::InternedString(absl::string_view str, bool shared)
    : length_(str.length()), is_shared_(shared), is_data_owner_(true) {
  VMSDK_LOG(WARNING, nullptr) << "InternedString constructor (string_view) - string: '" 
                              << str << "', length: " << length_ 
                              << ", shared: " << shared;
  data_ = new char[length_ + 1];
  memcpy(data_, str.data(), length_);
  data_[length_] = '\0';
}

InternedString::InternedString(char* data, size_t length)
    : data_(data), length_(length), is_shared_(true), is_data_owner_(false) {
  VMSDK_LOG(WARNING, nullptr) << "InternedString constructor (char*) - string: '" 
                              << absl::string_view(data, length) << "', length: " << length 
                              << ", data_owner: false";
}

InternedString::~InternedString() {
  VMSDK_LOG(WARNING, nullptr) << "InternedString destructor called - string: '" 
                              << absl::string_view(data_, length_) 
                              << "', length: " << length_ 
                              << ", is_shared: " << is_shared_ 
                              << ", is_data_owner: " << is_data_owner_;
  
  // NOTE: isolate memory tracking for deallocation.
  IsolatedMemoryScope scope{StringInternStore::memory_pool_};

  if (is_shared_) {
    VMSDK_LOG(WARNING, nullptr) << "Calling Release for shared string: '" 
                                << absl::string_view(data_, length_) << "'";
    StringInternStore::Instance().Release(this);
  }

  if (is_data_owner_) {
    VMSDK_LOG(WARNING, nullptr) << "Deleting data for string: '" 
                                << absl::string_view(data_, length_) << "'";
    delete[] data_;
  } else {
    VMSDK_LOG(WARNING, nullptr) << "Freeing allocator data for string: '" 
                                << absl::string_view(data_, length_) << "'";
    Allocator::Free(data_);
  }
}

void StringInternStore::Release(InternedString* str) {
  VMSDK_LOG(WARNING, nullptr) << "StringInternStore::Release called for string: '" 
                              << str->Str() << "', store size before: " << str_to_interned_.size();
  
  absl::MutexLock lock(&mutex_);
  auto it = str_to_interned_.find(*str);
  if (it == str_to_interned_.end()) {
    VMSDK_LOG(WARNING, nullptr) << "String not found in intern store: '" << str->Str() << "'";
    return;
  }
  auto locked = it->second.lock();
  // During `StringIntern` destruction, a new `StringIntern` may be stored,
  // so we check if the `StringIntern` being released is the one currently
  // stored before removing it.
  if (!locked || locked.get() == str) {
    VMSDK_LOG(WARNING, nullptr) << "Erasing string from intern store: '" << str->Str() 
                                << "', store size after will be: " << (str_to_interned_.size() - 1);
    str_to_interned_.erase(*str);
  } else {
    VMSDK_LOG(WARNING, nullptr) << "String not erased - different instance: '" << str->Str() << "'";
  }
}

std::shared_ptr<InternedString> StringInternStore::Intern(
    absl::string_view str, Allocator* allocator) {
  return Instance().InternImpl(str, allocator);
}

std::shared_ptr<InternedString> StringInternStore::InternImpl(
    absl::string_view str, Allocator* allocator) {
  VMSDK_LOG(WARNING, nullptr) << "StringInternStore::InternImpl called for string: '" 
                              << str << "', length: " << str.size() 
                              << ", allocator: " << (allocator ? "custom" : "default")
                              << ", store size before: " << str_to_interned_.size();
  
  IsolatedMemoryScope scope{memory_pool_};

  absl::MutexLock lock(&mutex_);
  auto it = str_to_interned_.find(str);
  if (it != str_to_interned_.end()) {
    if (auto locked = it->second.lock()) {
      VMSDK_LOG(WARNING, nullptr) << "Found existing interned string: '" << str << "'";
      return locked;
    } else {
      VMSDK_LOG(WARNING, nullptr) << "Found expired weak_ptr for string: '" << str << "', will recreate";
    }
  }

  VMSDK_LOG(WARNING, nullptr) << "Creating new interned string: '" << str << "'";
  std::shared_ptr<InternedString> interned_string;
  if (allocator) {
    VMSDK_LOG(WARNING, nullptr) << "Using custom allocator for string: '" << str << "'";
    auto buffer = allocator->Allocate(str.size() + 1);
    memcpy(buffer, str.data(), str.size());
    buffer[str.size()] = '\0';
    interned_string =
        std::shared_ptr<InternedString>(new InternedString(buffer, str.size()));
  } else {
    VMSDK_LOG(WARNING, nullptr) << "Using default allocation for string: '" << str << "'";
    interned_string =
        std::shared_ptr<InternedString>(new InternedString(str, true));
  }
  str_to_interned_.insert({*interned_string, interned_string});
  
  VMSDK_LOG(WARNING, nullptr) << "Inserted new interned string: '" << str 
                              << "', store size after: " << str_to_interned_.size();
  return interned_string;
}

int64_t StringInternStore::GetMemoryUsage() { 
  int64_t usage = memory_pool_.GetUsage();
  VMSDK_LOG(WARNING, nullptr) << "StringInternStore::GetMemoryUsage called - current usage: " 
                              << usage << " bytes, store size: " << Instance().str_to_interned_.size();
  return usage;
}

}  // namespace valkey_search
